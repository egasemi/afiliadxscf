<%- include('partials/_header') %>

<form action="/login" method="POST">
    <div class="d-grid gap-4">

        <div class="d-flex justify-content-between">
            <h3>Ingreso Consulta Personas CF</h3>
        </div>
        <% if (loginMessage) { %>
            <small class="text-danger"><%= loginMessage %></small>                
        <% } %>
        <div class="form-floating">
            <input type="number" name="dni" id="dni" class="form-control" autocomplete="off" placeholder="DNI" required>
            <label for="dni">DNI</label>
        </div>

        <div class="form-floating">
            <input type="password" name="password" id ="password" class="form-control" autocomplete="off" placeholder="cuenta" required>
            <label for="password" class="col-form-label">Contrase√±a</label>
        </div>

        <button type="submit" class="btn btn-outline-success btn-lg" aria-describedby="dni" id="buscar">Ingresar</button>

    </div>
</form>

<%- include('partials/_footer') %>
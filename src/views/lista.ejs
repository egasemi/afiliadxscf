<%- include('partials/_header') %>
<%- include('navbar') %>

<h3>Afiliadxs por Lugar</h3>

<div class="form-floating">
    <select name="distrito" id="lugar" class="form-select" onchange="submitSelect();">
        <option value="" disabled>Elegí un lugar</option>
        <% for( let i = 0; i < lugares.length; i++ ) { %>
            <% if (lugares[i] === "") { %>
                <option value="">NINGUNO</option> 
            <% } else {%>
                <option value="<%= lugares[i] %>" <%= lugares[i] === _distrito ? 'selected': '' %> ><%= lugares[i] %></option>
            <% } %>
        
        <% } %>
    </select>
    <label for="lugar">Lugar</label>
</div>
<% if (lista) { %>
    <div class="form-floating d-none d-sm-block">
        <input type="text" name="buscador" id="buscador" class="form-control" autocomplete="off" placeholder="Buscador" required>
        <label for="buscador">Buscador</label>
    </div>
    <h3><%= _distrito %> (<%= count %>)</h3>
    <div class="table-responsive d-none d-sm-block">
        <table class="table table-hover table-bordered" id="tabla">
            <thead class="table-ligth">
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Dirección</th>
                    <th scope="col">Contacto</th>
                    <th scope="col">Ficha</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i = 0;i < lista.length; i++) {%>
                    <tr id='<%= lista[i].id %>' scope="row" class="fila <%= lista[i].confirmada ? '' : 'text-danger' %>" >
                        <td scope="col"><%= lista[i].nombre%></td>
                        <td scope="col"><%= lista[i].apellido%></td>
                        <td scope="col"><%= lista[i].domicilio%></td>
                        <td scope="col"><%= lista[i].contacto%></td>
                        <td scope="col"><a href="/afiliadx/<%= lista[i]._id %>" class="btn btn-outline-info">Ver Ficha</a></td>
                    </tr>
                    <%}%>
            </tbody>
        </table>
    </div>
    <div class="card-group d-block d-sm-none mt-4" id="cards">
        <% for (var i = 0;i < lista.length; i++) {%>
            <div class="card <%= lista[i].confirmada ? 'border-success' : 'border-danger' %>" id="<%= lista[i].id %>">
                <% if (lista[i].confirmada) { %>
                    <div class="card-header d-flex flex-row justify-content-between">
                        <div class="p-2 text-success"><b><%= lista[i].dni %></b></div>
                        <div class="p-2 text-success">Confirmada</div>
                    </div>
                <% } else { %>
                    <div class="card-header d-flex flex-row justify-content-between">
                        <div class="p-2 text-danger"><b><%= lista[i].dni %></b></div>
                        <div class="p-2 text-danger">Pendiente o caída</div>
                    </div>
                <% } %> 
                <div class="card-body d-grid gap-2" >
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="card-title" id="nombreApellido">
                                <%= lista[i].nombre %><br>
                                <%= lista[i].apellido %><br>
                                <small class="text-muted">(<%= lista[i].domicilio %>)</small>
                            </h5>
                            <p class="card-text"><%= lista[i].contacto %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col d-grid gap-2">
                            <a href="/afiliadx/<%= lista[i]._id %>" class="btn btn-outline-info">Ver Ficha</a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>  
    </div>
<% } %>
<script>
    function submitSelect() {
        var selected = document.getElementById('lugar').value
        console.log(selected);
        document.location.replace(`/lista/${selected}`)
        
    }
    $("#buscador").on("keyup", function() {
        var value = $(this).val().toLowerCase();
        $("#tabla tbody tr").filter(function() {
            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
    });

</script>

<%- include('partials/_footer') %> 